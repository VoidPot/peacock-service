{
  "name": "gql-module-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf build node_modules",
    "build": "tsc && npm run cp:graphql",
    "dev": "nodemon --config nodemon.json --inspect src/index.ts",
    "start": "node build/index.js",
    "cp:graphql": "copyfiles -u 1 src/modules/**/*.graphql build",
    "lint:check": "npx prettier . --check",
    "lint:fix": "npx prettier . --write",
    "prepare": "husky install",
    "types:gen": "gql-gen --config codegen.ts",
    "ssh:gen": "node ./scripts/generate-rsa-keys.js",
    "db:boot": "npm run prisma:gen && npm run db:deploy",
    "db:deploy": "prisma migrate deploy",
    "prisma:gen": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:studio": "npx prisma studio",
    "db:seed": "prisma db seed",
    "nvm": "nvm i && nvm use",
    "setup": "npm run clean && npm ci && npm run db:deploy && npm run prisma:gen && npm run build",
    "setup:update": "npm run clean && npm ci && npm run prisma:gen && npm run db:deploy && npm run build",
    "setup:local": "npm run clean && npm ci && npm run ssh:generate && npm run db:deploy && npm run prisma:gen && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Conppu/gql-module-service.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Conppu/gql-module-service/issues"
  },
  "homepage": "https://github.com/Conppu/gql-module-service#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/graphql-modules-preset": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/config": "^3.3.2",
    "@types/cors": "^2.8.15",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.10",
    "@types/npmlog": "^4.1.5",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "prisma": "^5.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.5.2",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-middleware": "^6.1.35",
    "graphql-modules": "^2.2.1",
    "graphql-scalars": "^1.22.4",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^5.14.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown"
  }
}
